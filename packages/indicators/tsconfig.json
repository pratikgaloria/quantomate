{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES2020",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,
    "lib": [
      "esnext",
      "DOM"
    ],
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "@types/jest"
    ]
  },
  "exclude": [
    "__tests__",
    "examples",
    "dist"
  ]
}