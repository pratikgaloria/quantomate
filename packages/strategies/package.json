{
    "name": "@quantomate/strategies",
    "version": "0.1.0",
    "description": "Trading strategies library for Alchemist",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "build": "tsc",
        "prepare": "npm run build",
        "test": "jest --coverage --no-cache",
        "test:build": "jest __tests__ --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
        "docs:generate": "typedoc",
        "lint": "eslint src --ext .ts",
        "prettify": "prettier \"src/**/*.ts\" --config .prettierrc --write",
        "precommit": "lint-staged"
    },
    "author": "Pratik Galoria <pratik.d.galoria@gmail.com> (https://github.com/pratikgaloria)",
    "keywords": [
        "stocks",
        "trading",
        "algorithm",
        "strategies",
        "backtest"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.5",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "coveralls": "3.1.1",
        "eslint": "8.56.0",
        "husky": "8.0.3",
        "jest": "29.7.0",
        "lint-staged": "15.2.0",
        "prettier": "3.1.1",
        "ts-jest": "29.1.1",
        "typedoc": "0.25.4",
        "typescript": "5.3.3"
    },
    "dependencies": {
        "@quantomate/core": "^0.1.0",
        "@quantomate/indicators": "^0.1.0",
        "lodash": "^4.17.21",
        "yahoo-finance2": "^3.10.2"
    },
    "jest": {
        "testEnvironment": "node",
        "testRegex": "__tests__.*.(test|spec).ts$",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.ts"
        ],
        "coveragePathIgnorePatterns": [
            "index.ts"
        ],
        "modulePaths": [
            "<rootDir>/src"
        ],
        "moduleNameMapper": {
            "^@quantomate/core$": "<rootDir>/../core/src",
            "^@quantomate/indicators$": "<rootDir>/../indicators/src"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint src --ext .ts",
            "prettier --single-quote --write"
        ]
    }
}
